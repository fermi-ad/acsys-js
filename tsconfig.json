{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/esm",
        "baseUrl": ".",
        "paths": {
            "@fnal/acl": ["acl/acl"], // This mapping is relative to "baseUrl"
            "@fnal/acnet": ["acnet/acnet"], // This mapping is relative to "baseUrl"
            "@fnal/dpm-client": ["dpm/dpm"], // This mapping is relative to "baseUrl"
            "@fnal/proto_lib": ["proto_lib/proto_lib"], // This mapping is relative to "baseUrl"
        },
        "allowJs": true,
    },
    "include": [
        "./main.ts",
        "./**/*.ts",
    ],
    "declaration": true
}
